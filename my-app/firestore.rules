rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isValidNewsItem() {
      let data = request.resource.data;
      return data.keys().hasAll(['sourceId', 'title', 'url', 'createdAt'])
        && data.title is string
        && data.title.size() > 0
        && data.url is string;
    }

    function isValidSource() {
      let data = request.resource.data;
      return data.keys().hasAll(['name', 'websiteUrl', 'isActive'])
        && data.name is string
        && data.name.size() > 0;
    }

    function isValidStyleTemplate() {
      let data = request.resource.data;
      return data.keys().hasAll(['platform', 'name', 'examples'])
        && data.platform in ['twitter', 'threads', 'instagram', 'linkedin']
        && data.name is string
        && data.examples is list;
    }

    // User document
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // Sources subcollection
      match /sources/{sourceId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId) && isValidSource();
        allow update, delete: if isOwner(userId);
      }

      // News items subcollection
      match /newsItems/{newsId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId) && isValidNewsItem();
        allow update, delete: if isOwner(userId);
      }

      // Style templates subcollection
      match /styleTemplates/{templateId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId) && isValidStyleTemplate();
        allow update, delete: if isOwner(userId);
      }
    }
  }
}
